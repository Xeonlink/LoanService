// 이 프로젝트에서 사용되는 vscode설정을 저장하는 파일
// 이 설정은 vscode의 기본설정과 유저설정을 덮어쓴다.
{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    // 커스텀 패키지 import시 자동으로 생성되는 __pycache__ 폴더를 숨김
    "**/__pycache__": true,
  },
  "python.analysis.typeCheckingMode": "basic"
}